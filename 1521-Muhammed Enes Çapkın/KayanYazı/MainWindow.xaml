<Window x:Class="KayanYazı.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KayanYazı"
        mc:Ignorable="d"
        Title="Kayan Yazı" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Menu>
            <MenuItem Header="Kayıt">
                <MenuItem Header="Yeni Kategori" Tag="KategoriKaydıPage" Click="MenuItem_Click"/>
                <MenuItem Header="Yeni Metin" Tag="MetinKaydıPage" Click="MenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Göster">
                <MenuItem Header="Liste" Tag="ListelePage" Click="MenuItem_Click"/>
                <MenuItem Header="Kayan Yazı" Tag="KayanYazıPage" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>

        <Frame x:Name="Frm" Source="/Views/KayanYazıPage.xaml" NavigationUIVisibility="Hidden" Grid.Row="1"/>
        
    </Grid>
</Window>
