<Page x:Class="KayanYazı.Views.MetinKaydıPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KayanYazı.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="MetinKaydıPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Kategori:" Width="120" FontSize="18"/>
                <ComboBox  ItemsSource="{Binding Kategoriler,  ValidatesOnDataErrors=True}" SelectedItem="{Binding Kategori}" Width="300"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Metin:" Width="120" FontSize="18"/>
                <TextBox Width="300" Text="{Binding GerçekMetin, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <Button Content="Kaydet" Width="120" Margin="10" Command="{Binding MetinKaydetCommand}"/>
        </StackPanel>
    </Grid>
</Page>
